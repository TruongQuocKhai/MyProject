@model CommonModels.EF.User

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    Cập nhật User
}

@section jsFooter {
    <script src="~/Contents/js/show-hide-password.js"></script>
}
<style>
    .field-icon {
        float: right;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
        color: #fff;
    }

    span {
        color: white;
    }

    label {
        color: white;
    }
</style>

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#inforProducts"><i class="icon nalika-edit"></i> Thông tin User</a></li>
                        </ul>
                        <form action="@Url.Action("EditUser","User")" method="post">
                            <div id="myTabContent" class="tab-content custom-product-edit">
                                <div class="product-tab-list tab-pane fade active in">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">

                                                @*<div class="form-group">
                                                        <span><i class="fa fa-barcode"></i></span>
                                                        <label>Tên đăng nhập</label>
                                                        <input type="text" class="form-control" name="UserName" value="@Model.UserName" readonly placeholder="Nhâp tên đăng nhập" style="color:black;">
                                                        @Html.ValidationMessage("UserName", new { @class = "text-danger" })
                                                    </div>*@
                                                <div class="form-group">
                                                    <span><i class="fa fa-usd"></i></span>
                                                    <label>Email đăng nhập</label>
                                                    <input type="email" class="form-control" name="Email" readonly value="@Model.Email" placeholder="Nhập email" style="color:black;">
                                                    @Html.ValidationMessage("Email", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    <span><i class="icon nalika-user"></i></span>
                                                    <label>Họ tên</label>
                                                    <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Nhập họ tên">
                                                    @Html.ValidationMessage("Name", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    <span><i class="icon nalika-edit"></i></span>
                                                    <label>Mât khẩu</label>
                                                    <input id="password-field" name="Password" value="@Model.Password" type="password" class="form-control" value="" placeholder="Nhập mật khẩu" style="position:initial">
                                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                                    @Html.ValidationMessage("Password", new { @class = "text-danger" })
                                                </div>
                                                
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                <div class="form-group">
                                                    <span><i class="icon nalika-new-file"></i></span>
                                                    <label>Điện thoại</label>
                                                    <input name="phone" value="@Model.Phone" type="tel" maxlength="11" spellcheck="false" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control" placeholder="Nhập số điện thoại">
                                                    @Html.ValidationMessage("Phone", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    <span><i class="fa fa-usd"></i></span>
                                                    <label>Địa chỉ</label>
                                                    <textarea class="form-control" name="Address">@Model.Address</textarea>
                                                </div>
                                                @*<div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon">Trạng thái</span>
                                                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control", @style = "width:30px; height:30px; margin-left:10px;" })
                                                    <input type="checkbox" class="form-control" name="Status" value="" style="width:30px; height:30px; margin-left:10px;">
                                                </div>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">
                                                <button type="submit" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                    Cập nhật
                                                </button>
                                                <button type="submit" class="btn btn-ctl-bt waves-effect waves-light">
                                                    Hủy bỏ
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
