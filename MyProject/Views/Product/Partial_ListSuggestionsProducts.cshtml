@{
    var listSuggestionsProducts = (List<CommonModels.EF.Product>)ViewBag.ListSuggestionsProducts;
}
<section class="men-collection gray-bg">
    <div class="container">
        <header class="text-center">
            <h2 class="text-uppercase">Có thể bạn quan tâm</h2>
        </header>
        <!-- Products Slider-->
        <div class="owl-carousel owl-theme products-slider">
            <!-- item-->
            @foreach (var item in listSuggestionsProducts)
            {
                <div class="item">
                    <div class="product is-gray">
                        <div class="image d-flex align-items-center justify-content-center">
                            <img src="@item.Image" alt="product" class="img-fluid">
                            <div class="hover-overlay d-flex align-items-center justify-content-center">
                                <div class="CTA d-flex align-items-center justify-content-center"><a href="/them-vao-gio-hang?productId=@item.ID&quantity=1" class="add-to-cart" title="Thêm vào giỏ"><i class="fa fa-shopping-cart"></i></a><a href="/chi-tiet/@item.MetaTitle-@item.ID" class="visit-product active"><i class="icon-search"></i>Xem chi tiết</a><a href="#" data-toggle="modal" data-target="#@item.ID" class="quick-view" title="Xem nhanh"><i class="fa fa-arrows-alt"></i></a></div>
                            </div>
                        </div>
                        <div class="title">
                            <a href="/chi-tiet/@item.MetaTitle-@item.ID">
                                <h3 class="h4 no-margin-bottom">@item.Name</h3>
                            </a><span class="price text-muted">@item.Price.GetValueOrDefault(0).ToString("N0")<sup>đ</sup></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Modal dialog-->
@foreach (var item in listSuggestionsProducts)
{
    <div id="@item.ID" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade overview">
        <div role="document" class="modal-dialog">
            <div class="modal-content">
                <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true"><i class="icon-close"></i></span></button>
                <div class="modal-body">
                    <div class="ribbon-primary text-uppercase">Sale</div>
                    <div class="row d-flex align-items-center">
                        <div class="image col-lg-5"><img src="/Contents/Images/@item.Image" alt="..." class="img-fluid d-block"></div>
                        <div class="details col-lg-7">
                            <h2>@item.Name</h2>
                            <ul class="price list-inline">
                                <li class="list-inline-item current">@item.Price.GetValueOrDefault(0).ToString("N0")<sub>đ</sub></li>
                            </ul>
                            <p>@*@item.Description*@ Mô tả sản phẩm</p>
                            <ul class="CTAs list-inline">
                                <li class="list-inline-item"><a href="/them-vao-gio-hang?productId=@item.ID&quantity=1" class="btn btn-template wide"> <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a></li>
                                <li class="list-inline-item"><a href="#" class="visit-product active btn btn-template-outlined wide"> <i class="icon-heart"></i>Yêu thích</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
