@model List<CommonModels.ProductCategoryJoinModel>
@using MyProject.Models;
@{
    var category = (CommonModels.EF.ProductCategory)ViewBag.Category;
    ViewBag.Title = "Sản phẩm từ danh mục";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section class="hero hero-page gray-bg padding-small">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-9 order-2 order-lg-1">
                <h1>Shop</h1><p class="lead text-muted">@category.Name</p>
            </div>
            <div class="col-lg-3 text-right order-1 order-lg-2">
                <ul class="breadcrumb justify-content-lg-end">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Shop</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<main>
    <div class="container">
        <div class="row">
            <!-- Sidebar-->
            <div class="sidebar col-xl-3 col-lg-4 sidebar">
                <div class="block">
                    <ul class="list-unstyled">
                        <li class="active">
                            <a href="#" class="d-flex justify-content-between align-items-center"><span>Danh Mục sản phẩm</span><small></small></a>
                            <ul class="list-unstyled">
                                @Html.Action("Partial_DropCategory", "ProductCategory")
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /Sidebar end-->
            <!-- Grid -->
            <div class="products-grid col-xl-9 col-lg-8 sidebar-left">
                <header class="d-flex justify-content-between align-items-start">
                    <span class="visible-items"> <strong> </strong> <strong> </strong></span>
                    <select id="sorting" class="bs-select">
                        <option value="newest">Newest</option>
                        <option value="oldest">Oldest</option>
                        <option value="lowest-price">Low Price</option>
                        <option value="heigh-price">High Price</option>
                    </select>
                </header>
                <div class="row">
                    <!-- item-->
                    @foreach (var item in Model)
                    {
                        <div class="item col-xl-4 col-md-6">
                            <div class="product is-gray">
                                <div class="image d-flex align-items-center justify-content-center">
                                    <div class="ribbon ribbon-primary text-uppercase">Sale</div><img src="@item.Images" alt="product" class="img-fluid">
                                    <div class="hover-overlay d-flex align-items-center justify-content-center">
                                        <div class="CTA d-flex align-items-center justify-content-center"><a href="/them-vao-gio-hang?productId=@item.ID&quantity=1" class="add-to-cart" title="Thêm vào giỏ"><i class="fa fa-shopping-cart"></i></a><a href="~/chi-tiet/@item.MetaTitle-@item.ID" class="visit-product active"><i class="icon-search"></i>Xem chi tiết</a><a href="#" data-toggle="modal" data-target="#@item.ID" class="quick-view" title="Xem nhanh"><i class="fa fa-arrows-alt"></i></a></div>
                                    </div>
                                </div>
                                <div class="title">
                                    <small class="text-muted">@item.CateName</small><a>
                                        <h3 class="h6 text-uppercase no-margin-bottom">@item.Name</h3>
                                    </a><span class="price text-muted">@item.Price.GetValueOrDefault(0).ToString("N0")<sup>đ</sup></span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (ViewBag.TotalPage >= 1)
                {
                    var pageDisplay = (int)ViewBag.MaxPage;
                    int totalPage = (int)ViewBag.TotalPage;
                    int currentPage = ((int)ViewBag.Page);

                    // Create numeric links
                    var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                    var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                    var link = "/san-pham/" + category.MetaTitle + "-" + category.ID;
                    <nav aria-label="page navigation example" class="d-flex justify-content-center">
                        <ul class="pagination pagination-custom">
                            <li class="page-item"><a href="@link?page=@ViewBag.First" aria-label="Previous" class="page-link"><span aria-hidden="true">Prev</span><span class="sr-only">Previous</span></a></li>
                            @for (int i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (currentPage == i)
                                {
                                    <li class="page-item"> <a href="@link?page=@i" class="page-link active" title="Trang @i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a href="@link?page=@i" title="Trang @i" class="page-link">@i</a></li>
                                }
                            }
                            <li class="page-item"> <a href="@link?page=@ViewBag.Last" class="page-link"> <span aria-hidden="true">Next</span><span class="sr-only">Next</span></a></li>
                        </ul>
                    </nav>
                }
                else
                {
                    
                }
            </div>
            <!-- / Grid End-->
        </div>
    </div>
    <!--Modal dialog-->
    @foreach (var item in Model)
    {
        <div id="@item.ID" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade overview">
            <div role="document" class="modal-dialog">
                <div class="modal-content">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true"><i class="icon-close"></i></span></button>
                    <div class="modal-body">
                        <div class="ribbon-primary text-uppercase">Sale</div>
                        <div class="row d-flex align-items-center">
                            <div class="image col-lg-5"><img src="/Contents/Images/@item.Images" alt="..." class="img-fluid d-block"></div>
                            <div class="details col-lg-7">
                                <h2>@item.Name</h2>
                                <ul class="price list-inline">
                                    <li class="list-inline-item current">@item.Price.GetValueOrDefault(0).ToString("N0")<sub>đ</sub></li>
                                </ul>
                                <p>@*@item.Description*@ Mô tả sản phẩm</p>
                                <ul class="CTAs list-inline">
                                    <li class="list-inline-item"><a href="/them-vao-gio-hang?productId=@item.ID&quantity=1" class="btn btn-template wide"> <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a></li>
                                    <li class="list-inline-item"><a href="#" class="visit-product active btn btn-template-outlined wide"> <i class="icon-heart"></i>Yêu thích</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</main>
