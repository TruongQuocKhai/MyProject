@model MyProject.Models.SignUpModel
@{
                /**/

                ViewBag.Title = "Đăng ký";
                Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@section jsFooter{
    <script src="~/Contents/js/show-hide-password.js"></script>
}
<style>
    .field-icon {
        float: right;
        margin-left: -25px;
        margin-top: -32px;
        position: relative;
        z-index: 2;
    }
</style>

<section class="padding-small">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="block">
                    <div class="block-header">
                        <h5>Đăng ký</h5>
                    </div>
                    <div class="block-body">
                        <hr>
                        <div class="form-group">
                            @if (ViewBag.Success != null)
                            {
                                <div class="alert alert-success"> @ViewBag.Success click <a href="/dang-nhap" style="font-weight:bold; font-style:italic;"> vào đây </a> để đăng nhập </div>
                            }
                        </div>
                        <form action="@Url.Action("SignUp","User")" method="post">
                            @Html.AntiForgeryToken() <!--Mã chống thông báo giả mạo-->
                            <div class="form-group">
                                <label for="text" class="form-label">Họ tên</label>
                                <input id="Name" name="Name" type="text" class="form-control" placeholder="Nhập họ tên">
                                @Html.ValidationMessage("Name", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="number" class="form-label">Số điện thoại</label>
                                <input name="phone" type="tel" maxlength="12" spellcheck="false" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control" placeholder="Nhập số điện thoại">
                                @Html.ValidationMessage("Phone", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="email" class="form-label">Email</label>
                                <input id="Email" name="Email" type="email" class="form-control" placeholder="Nhập email">
                                @Html.ValidationMessage("Email", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input id="password-field" name="Password" type="password" class="form-control" value="" placeholder="Nhập mật khẩu" />
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Đăng ký</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
